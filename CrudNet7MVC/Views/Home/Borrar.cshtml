@model CrudNet7MVC.Models.Contacto
@{
    ViewData["Title"] = "Borrar Contacto";
}

<h1 class="text-center">Contacto con .NET 7</h1>


<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white">
                    <strong>Borrar Usuario</strong>
                </h3>
            </div>
            <div class="card-body bg-light">
                <form asp-action="Borrar">
                    @* ID del usuario como campo oculto *@
                    <input asp-for="Id" type="hidden" />

                    @* VALIDACION CUANDO SE EJECUTE SUBMIT *@
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-gruop">
                        <label class="control-label" asp-for="Nombre"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" />
                        @* VALIDACION POR CAMPO *@
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-gruop">
                        <label class="control-label" asp-for="Telefono"></label>
                        <input asp-for="Telefono" class="form-control" placeholder="Ingresa el telefono" />
                        @* VALIDACION POR CAMPO *@
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="form-gruop">
                        <label class="control-label" asp-for="Celular"></label>
                        <input asp-for="Celular" class="form-control" placeholder="Ingresa el celular" />
                        @* VALIDACION POR CAMPO *@
                        <span asp-validation-for="Celular" class="text-danger"></span>
                    </div>

                    <div class="form-gruop">
                        <label class="control-label" asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" placeholder="Ingresa el email" />
                        @* VALIDACION POR CAMPO *@
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-danger d-block mx-auto">
                            <i class="bi bi-eraser-fill">Borrar Usuario</i>
                        </button>
                    </div>
                </form>

                <a asp-controller="Home" asp-action="index">Volver</a>
            </div>
        </div>

    </div>
</div>
